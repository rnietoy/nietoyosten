@{
    ViewBag.Title = "Pictures";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <!-- Menu column -->
    <p><a href="~/pictures/AddAlbum">Agregar álbum</a></p>
    <hr/>
    
    <h2>Álbumes de fotos</h2>

    <!-- Main page -->
    @foreach (var album in @Model)
    {
        <p><a href="~/pictures/album/@album.FolderName">@string.Format("{0:d} - {1}", album.CreatedAt, album.Title)</a></p>
    }
</div>